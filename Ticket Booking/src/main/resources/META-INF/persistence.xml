<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="com.cinema.booking.persistence">
		
		<description>Persistence Unit for cinema_booking_system MySQL DB</description>
		<class>com.ticket_booking.main.entities.TicketBooking</class>
		<class>com.ticket_booking.main.entities.CinemaHall</class>
		<class>com.ticket_booking.main.entities.CinemaMovieShows</class>
		<class>com.ticket_booking.main.entities.Movie</class>
		<class>com.ticket_booking.main.entities.User</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/cinema_booking_system" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="harshitsaxena" />
		</properties>
	
	</persistence-unit>

</persistence>